extends layout.pug

block content
  .container.bg-light
    .row.align-items-center
      .col-8
        h2.display-2
          | My mood
        #toggle-search.btn-group.btn-group-toggle(data-toggle='buttons')
          label#do-song-search.btn.btn-secondary.active
            input#option1(type='radio' name='options' autocomplete='off' checked='')
            |  Song Search
          label#do-mood-search.btn.btn-secondary
            input#option2(type='radio' name='options' autocomplete='off')
            |  Mood Search
        #mood-input.input-group.my-2.d-none
          #mood-wrapper.d-flex.justify-content-center 
            btn-group.btn-group-toggle(data-toggle='buttons')
                .col.d-flex.justify-content-center.py-2
                    label#joy.btn.btn-outline-primary.mood-btn
                        input#asdf(type='checkbox' name='options' autocomplete='off')
                        |   Joy
                    label#sad.btn.btn-outline-primary.mood-btn
                        input(type='checkbox' name='options' autocomplete='off')
                        |   Sad
                    label#stressed.btn.btn-outline-primary.mood-btn
                        input(type='checkbox' name='options' autocomplete='off')
                        |   Stressed
                    label#anger.btn.btn-outline-primary.mood-btn
                        input(type='checkbox' name='options' autocomplete='off')
                        |   Anger
                    label#confidence.btn.btn-outline-primary.mood-btn
                        input(type='checkbox' name='options' autocomplete='off')
                        |   Confidence
                    label#shame.btn.btn-outline-primary.mood-btn
                        input(type='checkbox' name='options' autocomplete='off')
                        |   Shame
                .col.d-flex.justify-content-center 
                    label#jealousy.btn.btn-outline-primary.mood-btn
                        input(type='checkbox' name='options' autocomplete='off')
                        |   Jealousy
                    label#loneliness.btn.btn-outline-primary.mood-btn
                        input(type='checkbox' name='options' autocomplete='off')
                        |   Loneliness
                    label#fear.btn.btn-outline-primary.mood-btn
                        input(type='checkbox' name='options' autocomplete='off')
                        |   Fear
                    label#relaxed.btn.btn-outline-primary.mood-btn
                        input(type='checkbox' name='options' autocomplete='off')
                        |   Relaxed
                    label#surprise.btn.btn-outline-primary.mood-btn
                        input(type='checkbox' name='options' autocomplete='off')
                        |   Surprise
        #song-input.input-group.my-2
          .form-outline
            input#song-search.form-control(type='search',placeholder="Search by song")
            #autocom-box.list-group
              //
                <a href="#" class="list-group-item list-group-item-action">Dapibus ac facilisis in</a>
          button#song-search-btn.btn.btn-primary(type='button')
            span
              img#search-icon(src='./images/search_icon.png')
        #song-picks.row.align-items-top
        button#submitBtn.btn.btn-primary.d-none(type='button') Submit
      #infoModal.modal(tabindex='-1' role='dialog' aria-labelledby='exampleModalLabel' aria-hidden='true')
        .modal-dialog(role='document')
          .modal-content
            .modal-header
              h5.modal-title Modal title
            .modal-body
              | ...
            .modal-footer
              .btn-group 
                button#removeBtn.btn.btn-warning.px-10(type="button") Remove Song
                button#previewBtn.btn.btn-outline-info(type="button") Preview Song
              audio#previewAudio(preload='auto')
      .col-4
        #text-btn.button.btn.btn-primary(type="button") Add description
        #text-box.form-group.d-none
          textarea#form-content.form-control(rows="3",placeholder="text")

